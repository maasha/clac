<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="using:Clac.UI.Views"
             x:Class="Clac.UI.Views.CalculatorView"
             Background="White">

    <DockPanel Background="White">
        <!-- Display at top with fixed height -->
        <views:DisplayView DockPanel.Dock="Top" />
        
        <!-- Input below display -->
        <views:InputView DockPanel.Dock="Top" />
        
        <!-- Keyboard fills remaining space -->
        <views:KeyboardView />
    </DockPanel>

</UserControl>