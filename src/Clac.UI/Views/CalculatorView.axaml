<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="using:Clac.UI.Views"
             x:Class="Clac.UI.Views.CalculatorView">

    <DockPanel>
        <!-- Keyboard at top -->
        <views:KeyboardView DockPanel.Dock="Bottom" />
        
        <!-- Input at bottom -->
        <views:InputView DockPanel.Dock="Bottom" />
        
        <!-- Display fills remaining space -->
        <views:DisplayView />
    </DockPanel>

</UserControl>