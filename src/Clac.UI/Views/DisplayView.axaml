<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Clac.UI.ViewModels"
             xmlns:views="using:Clac.UI.Views"
             x:Class="Clac.UI.Views.DisplayView"
             x:DataType="vm:CalculatorViewModel">
    
    <UserControl.Styles>
        <Style Selector="TextBlock.stack-line">
            <Setter Property="FontFamily" Value="Courier New, monospace"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinHeight" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style Selector="TextBlock.line-number">
            <Setter Property="Foreground" Value="Gray"/>
        </Style>
    </UserControl.Styles>
    
    <Border BorderBrush="Gray" BorderThickness="2" Background="White" Height="140">
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl Name="StackItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="views:StackLineItem">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>   <!-- Line numbers -->
                                <ColumnDefinition Width="Auto"/> <!-- Values -->
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Classes="stack-line line-number" 
                                       Text="{Binding LineNumber}" 
                                       Grid.Column="0" 
                                       HorizontalAlignment="Right"/>
                            <TextBlock Classes="stack-line" 
                                       Text="{Binding FormattedValue}" 
                                       Grid.Column="1" 
                                       HorizontalAlignment="Left"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Border>
</UserControl>