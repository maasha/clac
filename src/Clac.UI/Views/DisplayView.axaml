<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Clac.UI.ViewModels"
             xmlns:views="using:Clac.UI.Views"
             x:Class="Clac.UI.Views.DisplayView"
             x:DataType="vm:CalculatorViewModel"
             VerticalAlignment="Top">
    
    <UserControl.Styles>
        <Style Selector="TextBlock.stack-line">
            <Setter Property="FontFamily" Value="Courier New, monospace"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style Selector="TextBlock.line-number">
            <Setter Property="Foreground" Value="Gray"/>
        </Style>
    </UserControl.Styles>
    
    <Border Name="DisplayBorder" BorderBrush="Gray" BorderThickness="2" Background="#e6e6e6">
        <ScrollViewer Name="StackScrollViewer"
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      AllowAutoHide="False">
            <ItemsControl Name="StackItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="views:StackLineItem">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>   <!-- Line numbers -->
                                <ColumnDefinition Width="*"/> <!-- Values - fills remaining space -->
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Classes="stack-line line-number" 
                                       Text="{Binding LineNumber}" 
                                       Grid.Column="0" 
                                       HorizontalAlignment="Right"/>
                            <TextBlock Classes="stack-line" 
                                       Text="{Binding FormattedValue}" 
                                       Grid.Column="1" 
                                       HorizontalAlignment="Right"
                                       Margin="0,0,8,0"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Border>
</UserControl>