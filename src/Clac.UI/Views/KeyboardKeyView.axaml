<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="using:Clac.UI.Models"
             x:Class="Clac.UI.Views.KeyboardKeyView"
             x:DataType="models:KeyboardKey">
    
    <Border x:Name="KeyBorder"
            Background="#363636"
            Width="60"
            Height="60"
            CornerRadius="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            PointerPressed="OnKeyPressed"
            Cursor="Hand">
        <TextBlock Text="{Binding Label}"
                   Foreground="White"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Border>
</UserControl>