<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:Clac.UI.Views"
        xmlns:config="using:Clac.UI.Configuration"
        xmlns:vm="using:Clac.UI.ViewModels"
        x:Class="Clac.UI.MainWindow"
        x:DataType="vm:CalculatorViewModel"
        Title="Clac - RPN Calculator"
        Width="{Binding Source={x:Static config:SettingsManager.UI}, Path=WindowWidth, Mode=TwoWay}"
        Height="{Binding WindowHeight}"
        MinWidth="{Binding Source={x:Static config:SettingsManager.UI}, Path=WindowMinWidth}"
        MinHeight="{Binding WindowMinHeight}">
    
    <views:CalculatorView />

</Window>